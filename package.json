{
    "name": "calcify",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "main": "dist/electron/main.js",
    "description": "calculator simplify",
    "author": {
        "name": "yono",
        "email": "oxwk123@gmail.com"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "compile:electron": "tsc -p tsconfig.electron.json",
        "electron:dev": "npm run compile:electron && cross-env VITE_DEV=true concurrently \"npm run dev\" \"wait-on tcp:5173 && electron .\"",
        "electron:build": "npm run build && npm run compile:electron && electron-builder --config.asar=true"
    },
    "build": {
        "appId": "com.electron.calcify",
        "productName": "Calcify",
        "asar": true,
        "directories": {
            "buildResources": "build",
            "output": "release"
        },
        "files": [
            "dist/electron/main.js",    
            "dist/index.html",          
            "dist/assets/**/*"          
        ],
        "mac": {
            "icon": "build/calcify.icns",
            "artifactName": "${productName}_${version}.${ext}",
            "target": [{
                "target": "dmg",
                "arch": ["arm64"]  
            }],
            "darkModeSupport": true
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "artifactName": "${productName}_${version}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": false
        }
    },
    "dependencies": {
        "autoprefixer": "^10.4.20",
        "postcss": "^8.4.47",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tailwindcss": "^3.4.14"
    },
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@types/node": "^22.8.6",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@vitejs/plugin-react": "^4.3.3",
        "concurrently": "^9.0.1",
        "cross-env": "^7.0.3",
        "electron": "^33.0.2",
        "electron-builder": "^25.1.8",
        "eslint": "^9.13.0",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.14",
        "globals": "^15.11.0",
        "typescript": "~5.6.2",
        "typescript-eslint": "^8.11.0",
        "vite": "^5.4.10",
        "wait-on": "^8.0.1"
    }
}
